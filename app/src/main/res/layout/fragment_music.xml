<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Título del reproductor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="Reproductor de Música"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:padding="10dp"
        android:text="▶ Reproducir"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonPauseMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#AFABAB"
        android:padding="10dp"
        android:text="⏸ Pausar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonStopMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D22C2C"
        android:padding="10dp"
        android:text="⏹ Detener"
        android:textColor="@android:color/white" />

</LinearLayout>
